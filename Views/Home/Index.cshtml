@model UploadFileMVC.Models.Period
@{
    ViewBag.Title = "Upload File";
}

@using (Html.BeginForm("Index", "Home", null, FormMethod.Post, new { id = "formU", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @*@Html.HiddenFor(model => model.fk_level_register)
            @Html.HiddenFor(model => model.date_modified)
            @Html.HiddenFor(model => model.done_by)*@


           @*@Html.EditorFor(model => model.File, new { htmlAttributes = new { @type="file", @class = "form-control", @placeholder = "File path" } })*@

            <div class="form-group input-group">
                <input type="file" name="File" id="File" style="width:240px" class="form-control" />
            </div>

            <div class="form-group input-group">
                @Html.EditorFor(model => model.submission_deadline_date, new { htmlAttributes = new { @type="date",  @class = "form-control", @placeholder = "Deadline Date" } })
                @Html.ValidationMessageFor(model => model.submission_deadline_date)
            </div>


            <div class="form-group input-group">
                @Html.TextBoxFor(model => model.period_covered, new { htmlAttributes = new {  @class = "form-control", @placeholder = "Coverd" } })
                @Html.ValidationMessageFor(model => model.period_covered)
            </div>

            <div class="form-group">
                <input id="submit" type="submit" value="Submit" class="btn btn-success" />
            </div>
        </div>
    </div>
}
